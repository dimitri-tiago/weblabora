<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">
	<persistence-unit name="labora-pu" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>com.philihp.weblabora.jpa.BasicEntity</class>
		<class>com.philihp.weblabora.jpa.User</class>
		<class>com.philihp.weblabora.jpa.Game</class>
		<class>com.philihp.weblabora.jpa.Game$Player</class>
		<class>com.philihp.weblabora.jpa.State</class>
		<class>com.philihp.weblabora.jpa.Config</class>
		<class>com.philihp.weblabora.jpa.Fingerprint</class>
		<class>com.philihp.weblabora.jpa.Chat</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>

		<properties>
			
			<property name="eclipselink.logging.level" value="WARNING" /> <!-- FINE turns on queries, WARNING turns off -->
			<property name="eclipselink.logging.timestamp" value="false" />
			<property name="eclipselink.logging.session" value="false" />
			<property name="eclipselink.logging.thread" value="false" />
			
			<property name="eclipselink.target-database" value="MySQL" />
			
			<property name="eclipselink.ddl-generation" value="none" />
			<!-- BE VERY CAREFUL ABOUT COMMITTING WITH DROP -->
			<!--<property name="eclipselink.ddl-generation" value="create-tables" />-->
			<!--<property name="eclipselink.ddl-generation" value="drop-and-create-tables" />-->
			<property name="eclipselink.ddl-generation.output-mode" value="database" />
		
			<!-- so much easier than JNDI -->
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/philihp?zeroDateTimeBehavior=convertToNull" />
			<property name="javax.persistence.jdbc.user" value="philihp" />
			<property name="javax.persistence.jdbc.password" value="philihp1" />
					
		</properties>
	</persistence-unit>
</persistence>
