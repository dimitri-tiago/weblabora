<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" 
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
<struts-config>

	<form-beans>
		<form-bean name="nullForm" type="com.philihp.weblabora.form.NullForm" />
	</form-beans>

	<global-forwards />

	<action-mappings>
		<action path="/showBoard" name="nullForm" type="com.philihp.weblabora.action.ShowBoard">
			<forward name="default" path="/board.jsp" />
		</action>
		<action path="/takeGrain" name="nullForm" type="com.philihp.weblabora.action.TakeGrain">
			<forward name="default" path="/showBoard.do" redirect="true" />
		</action> 
		<action path="/takeSheep" name="nullForm" type="com.philihp.weblabora.action.TakeSheep">
			<forward name="default" path="/showBoard.do" redirect="true" />
		</action> 
		<action path="/pushArm" name="nullForm" type="com.philihp.weblabora.action.PushArm">
			<forward name="default" path="/showBoard.do" redirect="true" />
		</action> 
	</action-mappings>

</struts-config>